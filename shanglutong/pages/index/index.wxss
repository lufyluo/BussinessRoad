.container .con2 {
  position: absolute;
  top: 0;
  left: 0rpx;
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
  box-shadow: 0 0 50rpx #767676;
  background-color: white;
}

.container .con2.on {
  animation: donghua2 0.5s linear 0s 1 normal forwards;
}

@keyframes donghua2 {
  0% {
    left: 0rpx;
  }

  100% {
    left: 430rpx;
  }
}

.container .con2.active {
  animation: donghua22 0.5s linear 0s 1 normal forwards;
