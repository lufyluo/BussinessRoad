  }
}

.container .tab {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx #d9d9d9 solid;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
}

.container .tab .tab1 {
  position: absolute;
  left: 20rpx;
  top: 15rpx;
  width: 50rpx;
  height: 50rpx;
  background: url(https://app.jingdouyun.xin/images/img/tab01.png) no-repeat center center;
  background-size: 100%;
  color: transparent;
}

.container .tab .tab2 {
  position: absolute;
  left: 85rpx;
  top: 20rpx;
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  background: #e03221;
  color: #fff;
  text-align: center;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
}

.container .tab .tab3 {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #111010;
  font-size: 32rpx;
}

.container .tab .tab4 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  background: url(https://app.jingdouyun.xin/images/img/tab02.png) no-repeat center center;
  background-size: 100%;
  color: transparent;
}

.container .box {
  width: 100%;
  height: 100%;
  position: relative;
  overflow-y: auto;
  padding: 0 10rpx;
}

.container .box .blist {
  display: none;
}

.container .box .blist.on {
  display: block;
}

.container .box .list {
  width: 100%;
  border-bottom: 1rpx #d9d9d9 solid;
  padding: 20rpx;
}

.container .box .list.on {
  background: url(https://app.jingdouyun.xin/images/tb01.png) no-repeat 0 35rpx;
  background-size: 15rpx;
}

.container .box .list .bt {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
}

.container .box .list .bt .bt1 {
  width: 80%;
  font-weight: bold;
  color: #000;
  font-size: 26rpx;
}

.container .box .list .bt .bt2 {
  width: 20%;
  font-size: 24rpx;
  color: #b2b2b2;
  float: right;
}

.container .box .list .text1 {
  width: 100%;
  color: #111010;
  font-size: 26rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.container .box .list .text2 {
  width: 100%;
  color: #bbbabb;
  font-size: 26rpx;
  height: 45rpx;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

