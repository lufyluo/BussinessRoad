/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

/**邮件总类别**/

.container .con3 {
  position: absolute;
  top: 0;
  left: -430rpx;
  width: 80rpx;
  height: 100%;
}

.container .con3 .box {
  height: 80rpx;
  text-align: center;
  vertical-align: middle;
  background: #d4d3d4;
  margin-top: 10px;
  line-height: 70rpx;
  font-size: 45rpx;
  border-radius: 5px;
}

.boxSelected {
  color: #357abc;
  border: 2rpx solid #357abc;
}

.container .con3.on {
  animation: donghua31 0.5s linear 0s 1 normal forwards;
}

@keyframes donghua31 {
  0% {
    left: -430rpx;
  }

  100% {
    left: 0rpx;
  }
}

.container .con3.active {
  animation: donghua32 0.5s linear 0s 1 normal forwards;
}

@keyframes donghua32 {
  0% {
    left: 0rpx;
  }

  100% {
    left: -430rpx;
  }
}

/**邮件子类别**/

.container .con1 {
  position: absolute;
  padding-top: 80rpx;
  top: 0;
  left: -350rpx;
  width: 350rpx;
  height: 100%;
  box-shadow: 0 0 2rpx #767676;
  background: white;
}

.container .con1.on {
  animation: donghua1 0.5s linear 0s 1 normal forwards;
}

@keyframes donghua1 {
  0% {
    left: -350rpx;
  }

  100% {
    left: 90rpx;
  }
}

.container .con1.active {
  animation: donghua11 0.5s linear 0s 1 normal forwards;
}

@keyframes donghua11 {
  0% {
    left: 90rpx;
  }

  100% {
    left: -350rpx;
  }
}

.container .con1 .bt {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 80rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  color: #357abc;
  font-size: 34rpx;
}

.container .con1 .clist {
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  padding-left: 80rpx;
  color: #111010;
  font-size: 28rpx;
  border-bottom: 1rpx #e5e5e5 solid;
  background-position: 30rpx center;
  background-repeat: no-repeat;
  background-size: 35rpx;
}

