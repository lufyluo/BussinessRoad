/**app.wxss**/
page{background:#fff;width:100%;height:100%;overflow-x:hidden;}
/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track{
    border-radius: 30rpx;
    background-color: #fff;
} 
::-webkit-scrollbar{
    width:7rpx;
    background-color: #fff;
}
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb{
    background-color: #8c7d70;
   border-radius: 30rpx;
}
.container {
  height: 100%;
  width:100%;
  padding: 0;
  font-size:30rpx;
  font-family:Microsoft YaHei,Arial;
} 
view,text,navigator,input,textarea,button,radio-group,label,picker,picker-view,swiper-item,swiper{box-sizing: border-box;font-family:Microsoft YaHei,Arial;}
input,button{background:none;border:0;background-color:none;padding:0;margin:0;border-radius:0;}
button::after{border:0;}
.clearfix:before {
    display: table;
    content: "";
    line-height: 0;
}
.clearfix:after {
    display: table;
    content: "";
    line-height: 0;
    clear: both;
}

.gaoliang{position:fixed;width:100%;height:100%;top:0;left:0;background:#000000;opacity:0.7;z-index:1;}
.gaoliang1{position:fixed;width:100%;height:100%;top:0;left:0;background:#fff;opacity:0.5;z-index:1;}

.boxcom{width:100%;display:flex;justify-content: space-between;flex-wrap:wrap;margin-top:15rpx;padding:0 15rpx;}
.boxcom .list{width:350rpx;background:#fff;border:1rpx #e9e9e9 solid;margin-bottom:15rpx;padding-bottom:20rpx;}
.boxcom .list .lpic{width:100%;}
.boxcom .list .lpic .pic1{width:100%;}
.boxcom .list .lpic .name{width:310rpx;margin:0 auto;border-top:2rpx #3a9c61 solid;height:100rpx;line-height:50rpx;overflow:hidden;color:#4d4d4d;font-size:28rpx;}
.boxcom .list .lcon{width:310rpx;margin:0 auto;display:flex;justify-content: space-around;}
.boxcom .list .lcon .price{width:60%;color:#e1010b;font-size:36rpx;}
.boxcom .list .lcon .price text{font-size:24rpx;}
.boxcom .list .lcon .buy_btn{width:30%;height:45rpx;border-radius:5rpx;background:#3a9c61;line-height:45rpx;text-align:center;color:#fff;font-size:28rpx;}
